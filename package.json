{
  "name": "wind",
  "version": "1.0.0",
  "description": "Wind - 一个便捷的桌面待办事项应用",
  "author": "刘儒",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.yourcompany.wind",
    "productName": "Wind",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/",
        "to": "src/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "sign": false,
      "signingHashAlgorithms": [],
      "icon": "src/icons/wind.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/icons/wind.ico",
      "uninstallerIcon": "src/icons/wind.ico"
    }
  }
}